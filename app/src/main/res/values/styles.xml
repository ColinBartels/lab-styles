<resources>

    <style name="TextStyle">
        <item name="android:textSize">22sp</item>
        <item name="?android:textColorPrimary"></item>
    </style>

    <style name="LabelStyle" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Gold" parent="@style/LabelStyle">
        <item name="?android:background"></item>
        <item name="android:textColor">Black</item>
    </style>

    <style name="Button" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4b2e83</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#b7a57a</item>
        <item name="android:textColorPrimary">#4b2e83</item>
        <item name="android:background">#b7a57a</item>
    </style>

</resources>
